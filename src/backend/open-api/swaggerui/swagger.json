{
  "openapi": "3.0.3",
  "info": {
    "contact": {
      "email": "nikita@ttnr.me"
    },
    "title": "Swagger - OpenAPI 3.0",
    "version": "1.0.0"
  },
  "servers": [
    {
      "description": "Dev server",
      "url": "http://api.template.de/"
    },
    {
      "description": "Prod server",
      "url": "https://euw.backend.example.com/"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "description": "Authenticate device",
      "name": "authentication"
    },
    {
      "description": "Check application health",
      "name": "status"
    },
    {
      "description": "Address device",
      "name": "device"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "operationId": "health",
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Health"
                }
              }
            },
            "description": "Health"
          },
          "500": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Health"
                }
              }
            },
            "description": "Health"
          }
        },
        "summary": "Check health of server",
        "tags": [
          "status"
        ]
      }
    },
    "/login": {
      "post": {
        "requestBody": {
          "$ref": "#/components/requestBodies/DeviceLogin"
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            },
            "description": "Success"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Error messages"
          }
        },
        "summary": "User login",
        "tags": [
          "authentication"
        ]
      }
    },
    "/device/change-state": {
      "post": {
        "requestBody": {
          "$ref": "#/components/requestBodies/DeviceChangeState"
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            },
            "description": "Success"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Error messages"
          }
        },
        "summary": "Modify state of device",
        "tags": [
          "device"
        ]
      }
    },
    "/device/change-options": {
      "post": {
        "requestBody": {
          "$ref": "#/components/requestBodies/DeviceChangeOptions"
        },
        "responses": {
          "200": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Success"
                }
              }
            },
            "description": "Success"
          },
          "401": {
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            },
            "description": "Error messages"
          }
        },
        "summary": "Modify options of device",
        "tags": [
          "device"
        ]
      }
    }
  },
  "components": {
    "requestBodies": {
      "DeviceLogin": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/DeviceLogin"
            }
          }
        },
        "description": "Device login"
      },
      "DeviceChangeState": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/DeviceChangeState"
            }
          }
        },
        "description": "Change device state"
      },
      "DeviceChangeOptions": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/DeviceChangeOptions"
            }
          }
        },
        "description": "Change device options"
      }
    },
    "responses": {
      "Success": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Success"
            }
          }
        },
        "description": "Success"
      },
      "Error": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Error"
            }
          }
        },
        "description": "Error messages"
      },
      "Health": {
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/Health"
            }
          }
        },
        "description": "Health"
      }
    },
    "schemas": {
      "Success": {
        "example": {
          "warningMessages": [
            {
              "code": "code",
              "message": "message"
            },
            {
              "code": "code",
              "message": "message"
            }
          ],
          "messages": [
            {
              "code": "code",
              "message": "message"
            },
            {
              "code": "code",
              "message": "message"
            }
          ]
        },
        "properties": {
          "messages": {
            "items": {
              "$ref": "#/components/schemas/Message"
            },
            "type": "array"
          },
          "warningMessages": {
            "items": {
              "$ref": "#/components/schemas/Message"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "Error": {
        "properties": {
          "warningMessages": {
            "items": {
              "$ref": "#/components/schemas/Message"
            },
            "type": "array"
          },
          "errorMessages": {
            "items": {
              "$ref": "#/components/schemas/Message"
            },
            "type": "array"
          }
        },
        "type": "object"
      },
      "Message": {
        "example": {
          "code": "code",
          "message": "message"
        },
        "properties": {
          "code": {
            "type": "string"
          },
          "message": {
            "type": "string"
          }
        },
        "type": "object"
      },
      "Health": {
        "example": {
          "server": true,
          "db": true
        },
        "properties": {
          "server": {
            "type": "boolean"
          },
          "db": {
            "type": "boolean"
          }
        },
        "type": "object"
      },
      "DeviceChangeState": {
        "oneOf": [
          {
            "$ref": "#/components/schemas/OpenStateOptions"
          },
          {
            "$ref": "#/components/schemas/ClosedStateOptions"
          },
          {
            "$ref": "#/components/schemas/PacktrapStateOptions"
          }
        ]
      },
      "OpenStateOptions": {
        "type": "object",
        "properties": {
          "state": {
            "type": "string",
            "enum": [
              "open"
            ]
          },
          "emitOpenEvent": {
            "type": "boolean",
            "description": "Emit open event"
          }
        },
        "required": [
          "state",
          "emitOpenEvent"
        ]
      },
      "ClosedStateOptions": {
        "type": "object",
        "properties": {
          "state": {
            "type": "string",
            "enum": [
              "closed"
            ]
          }
        },
        "required": [
          "state"
        ]
      },
      "PacktrapStateOptions": {
        "type": "object",
        "properties": {
          "state": {
            "type": "string",
            "enum": [
              "packtrap"
            ]
          },
          "emitPacktrapEvent": {
            "type": "boolean",
            "description": "Emit packtrap event"
          }
        },
        "required": [
          "state",
          "emitPacktrapEvent"
        ]
      },
      "DeviceLogin": {
        "example": {
          "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJzdWIiOiIxMjM0NTY3ODkwIiwibmFtZSI6IkpvaG4gRG9lIiwiaWF0IjoxNTE2MjM5MDIyfQ.SflKxwRJSMeKKF2QT4fwpMeJf36POk6yJV_adQssw5c"
        },
        "properties": {
          "token": {
            "type": "string",
            "format": "application/jwt"
          }
        },
        "required": [
          "token"
        ],
        "type": "object"
      },
      "DeviceChangeOptions": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "wifi": {
            "type": "object",
            "properties": {
              "ssid": {
                "type": "string"
              },
              "password": {
                "type": "string"
              }
            }
          },
          "kafka": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string"
              }
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "bearerFormat": "JWT",
        "scheme": "bearer",
        "type": "http"
      }
    }
  }
}
